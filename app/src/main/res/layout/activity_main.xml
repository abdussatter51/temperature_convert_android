<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/img"
    android:padding="5dp"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperature Convertor"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/back_arrow"
                android:textStyle="bold"
                app:tint="@color/white" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/menu"
                android:textStyle="bold"
                app:tint="@color/white" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Celsius"
            android:textStyle="bold"
            android:textColor="#D5FFFFFF"
            android:textSize="22sp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:foregroundGravity="right"

            android:src="@drawable/arrow_drop_down"
            android:textStyle="bold"
            app:tint="@color/white" />

    </LinearLayout>
    <EditText
        android:id="@+id/edInputTemp"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:background="@drawable/shade_rectangle"
        android:textSize="50sp"
        android:hint="Temp"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:maxLength="6"
        />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/shade_rectangle"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="2"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Fahrenheit"
            android:textColor="#D5FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvFahrenheit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text=""
            android:textColor="#D5FFFFFF"

            android:textSize="30sp" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/shade_rectangle"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="2"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Kelvin"
            android:textColor="#D5FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvKelvin"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text=""
            android:textColor="#D5FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/shade_rectangle"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="2"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Rankine"
            android:textColor="#D5FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvRankine"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text=""
            android:textColor="#D5FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/shade_rectangle"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="2"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Newton"
            android:textColor="#D5FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvNewton"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text=""
            android:textColor="#D5FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/shade_rectangle"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:weightSum="2"
        >
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Romer"
            android:textColor="#D5FFFFFF"
            android:textStyle="bold"
            android:textSize="25sp" />
        <TextView
            android:id="@+id/tvRomer"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="right"
            android:text=""
            android:textColor="#D5FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>



</LinearLayout>